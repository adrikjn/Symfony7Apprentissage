{% extends "admin/admin.html.twig" %}

{% block title "Recette : " ~ recipe.title %}

{% block body %}
    <h1>{{ recipe.title }}</h1>

    {{form_start(form)}}
        <div>
            {{form_row(form.title)}}
            {{form_row(form.slug)}}
            {{form_row(form.category)}}
            {{form_row(form.duration)}}
            {{form_row(form.content)}}
            <button type="submit" class="btn btn-primary">Modifier Recette</button>
        </div>
    {{form_end(form)}}
{% endblock %}