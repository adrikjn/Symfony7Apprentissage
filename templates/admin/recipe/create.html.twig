{% extends "admin/admin.html.twig" %}

{% block title "Créer une recette" %}

{% block body %}
    <h1>Créer une nouvelle recette</h1>

    {{form_start(form)}}
        <div>
            {{form_row(form.title)}}
            {{form_row(form.slug)}}
            {{form_row(form.duration)}}
            {{form_row(form.content)}}
            <button type="submit" class="btn btn-primary">Créer Recette</button>
        </div>
    {{form_end(form)}}
{% endblock %}